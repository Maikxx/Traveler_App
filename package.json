{
  "name": "traveler",
  "version": "1.0.0",
  "description": "This application is a basic level dating platform for people who love to travel, but who have not found a soulmate yet.",
  "main": "dist/server.js",
  "scripts": {
    "prefix-css": "autoprefixer-cli -o public/css/style.css public/css/style.css",
    "build-css": "node-sass-chokidar --include-path ./client/sass client/sass -o public/css --output-style compressed -q",
    "build-ts": "yarn clear-dist && tsc",
    "build": "yarn build-ts && babel --copy-files --include node_modules --out-dir dist dist",
    "clear-dist": "rm -rf dist/",
    "generateMockData": "node ./mockData/transformMockData.js && node ./mockData/deployMockData.js",
    "serve": "nodemon -w ./dist --exec babel-node dist/server.js || exit 1",
    "start-api": "nodemon -w ./api --exec babel-node api/api.js || exit 1",
    "start-app": "yarn build-ts && concurrently 'tsc -w' 'yarn watch-css' 'yarn watch-client-js' '(sleep 6 && yarn serve)' -r",
    "watch-client-js": "yarn babel --no-babelrc client/js --out-dir public/js --presets=latest -w",
    "watch-css": "yarn build-css && node-sass-chokidar --include-path ./client/sass client/sass -o public/css --output-style compressed -wqr"
  },
  "private": true,
  "author": "Maikel van Veen",
  "license": "Apache",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.1",
    "@types/mongoose": "^5.0.7",
    "@types/node": "^9.4.6",
    "autoprefixer": "^8.2.0",
    "autoprefixer-cli": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-preset-latest": "^6.24.1",
    "concurrently": "^3.5.1",
    "copyfiles": "^2.0.0",
    "express-session": "^1.15.6",
    "node-sass-chokidar": "^1.2.2",
    "nodemon": "^1.17.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.7.2",
    "yarn": "^1.5.1"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "helmet": "^3.12.0",
    "http-status": "^1.0.1",
    "mongodb": "^3.0.4",
    "mongoose": "^5.0.10",
    "multer": "^1.3.0",
    "node-fetch": "^2.1.2"
  }
}
