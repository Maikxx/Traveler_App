<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="/style.css">
        <title>Traveler App - Home</title>
    </head>
    <body>
        <header class="tl-PageHeader tl-PageHeader--indexPage">
            <ol>
                <li>
                    <label class="tl-NavigationToggle">
                        <img src="/img/man-user.svg" alt="menu-toggle">
                        <input type="checkbox" name="menu-toggle" id="menu-toggle">
                    </label>
                </li>
            </ol>
        </header>

        <nav class="tl-Navigation" id="tl-Navigation">
            <form action="/sign_in" method="POST">
                <fieldset>
                    <legend>Sign In</legend>
                    <label>
                        <span class="tl-RequiredFieldTitle">Email</span>
                        <input
                            type="email"
                            name="email"
                            placeholder="Email"
                            pattern="^\w+@\w+\..{2,3}(.{2,3})?$"
                            required
                        >
                    </label>
                    <label>
                        <span class="tl-RequiredFieldTitle">Password</span>
                        <input
                            type="password"
                            name="password"
                            placeholder="Password"
                            pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,}$"
                            required
                        >
                    </label>
                    <button class="tl-CTA-Button" id="sign-in-button" type="submit">Sign In</button>
                </fieldset>
            </form>
        </nav>

        <% if (error) { %>
            <div class="tl-ErrorBanner"><%= error.title %></div>
        <% } %>

        <main class="tl-IndexPage">
            <article class="tl-Card tl-Card--TravelCard">
                <header class="tl-TitleSection">
                    <h1>Traveler Dating App</h1>
                    <p>Traveler is a dating app for people who are looking to get into a relationship, with someone who loves to travel, like they do.</p>
                </header>

                <% if (availableTravelersData !== null) { %>
                    <section class="tl-BriefTravelerDisplays">
                        <h2>Available Travelers</h2>
                        <% availableTravelersData.forEach(function (availableTraveler) { %>
                            <section class="tl-BriefTravelerDisplay">
                                <h3><%= availableTraveler.fullName %></h3>
                                <div>
                                    <% if (availableTraveler.profileImage && availableTraveler.profileImage.length) { %>
                                        <img src="<%= availableTraveler.profileImage %>" alt="Available traveler">
                                    <% } %>
                                    <% if (availableTraveler.profileDescription) { %>
                                        <p><%= availableTraveler.profileDescription %></p>
                                    <% } %>
                                </div>
                            </section>
                        <% }) %>
                    </section>
                <% } %>
            </article>
            <form action="/sign_up" class="tl-SignUpForm" method="POST">
                <div>
                    <h2>Sign up for free! Don't worry it will remain free, forever!</h2>
                    <fieldset>
                        <legend>Account information</legend>

                        <div class="tl-FormField">
                            <label for="fullName">
                                <span class="tl-RequiredFieldTitle">Full name:</span>
                                <input
                                    type="text"
                                    name="fullName"
                                    placeholder="Name"
                                    required
                                >
                            </label>
                        </div>

                        <div class="tl-FormField">
                            <label for="email">
                                <span class="tl-RequiredFieldTitle">Email address:</span>
                                <input
                                    type="email"
                                    name="email"
                                    placeholder="Email"
                                    pattern="^\w+@\w+\..{2,3}(.{2,3})?$"
                                    required
                                >
                            </label>
                        </div>

                        <div class="tl-FormField">
                            <label for="password">
                                <span class="tl-RequiredFieldTitle">Password:</span>
                                <small>At least 1 lowercase, 1 uppercase, 1 number, a punctuation mark and it must be at least 8 characters long.</small>
                                <input
                                    type="password"
                                    name="password"
                                    placeholder="Password"
                                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,}$"
                                    required
                                >
                            </label>
                        </div>

                        <div class="tl-FormField">
                            <label for="repeatPassword">
                                <span class="tl-RequiredFieldTitle">Repeat password:</span>
                                <input
                                    type="password"
                                    name="repeatPassword"
                                    placeholder="Repeat password"
                                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,}$"
                                    required
                                >
                            </label>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>Gender information</legend>

                        <div class="tl-FormField">
                            <label class="tl-RequiredFieldTitle" for="ownGenderMale">Your gender:</label>
                            <label for="ownGenderMale">
                                <span>Male</span>
                                <input
                                    type="radio"
                                    name="ownGender"
                                    id="ownGenderMale"
                                    value="Male"
                                    required
                                >
                            </label>
                            <label for="ownGenderFemale">
                                <span>Female</span>
                                <input
                                    type="radio"
                                    name="ownGender"
                                    id="ownGenderFemale"
                                    value="Female"
                                    required
                                >
                            </label>
                        </div>

                        <div class="tl-FormField">
                            <label class="tl-RequiredFieldTitle" for="lookingForGenderMale">Looking for a:</label>
                            <label for="lookingForGenderMale">
                                <span>Male</span>
                                <input
                                    type="radio"
                                    name="lookingForGender"
                                    id="lookingForGenderMale"
                                    value="Male"
                                    required
                                >
                            </label>
                            <label for="lookingForGenderFemale">
                                <span>Female</span>
                                <input
                                    type="radio"
                                    name="lookingForGender"
                                    id="lookingForGenderFemale"
                                    value="Female"
                                    required
                                >
                            </label>
                        </div>
                    </fieldset>
                    <button class="tl-CTA-Button" type="submit">Sign up!</button>
                    <small>Or, if you already have an account, you can <button id="toggle-sign-in-button" type="button">sign in!</button></small>
                </div>
            </form>
        </main>
        <script src="/index.js"></script>
    </body>
</html>