<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="/style.css">
        <title>Traveler App - Chats Overview</title>
    </head>
    <body>
        <header class="tl-PageHeader">
            <ol>
                <li>
                    <a href="/">
                        Home
                    </a>
                </li>
                <li>
                    <label class="tl-NavigationToggle">
                        <img src="/img/man-user.svg" alt="menu-toggle">
                        <input type="checkbox" name="menu-toggle" id="menu-toggle">
                    </label>
                </li>
            </ol>
        </header>

        <nav class="tl-Navigation" id="tl-Navigation">
            <ol>
                <li>
                    <a href="/matches_overview">Matches overview</a>
                </li>
                <li>
                    <a href="/my_profile">My profile</a>
                </li>
                <li>
                    <form action="/log_out" method="POST"><button type="submit">Log out</button></form>
                </li>
            </ol>
        </nav>

        <main class="tl-ChatsOverviewPage">
            <h1 class="tl-ChatsOverviewPage__page-title">Chats</h1>
            <ul class="tl-ChatsOverviewPage__chats">
                <% openChatsData.forEach(function (openChat) { %>
                    <li class="tl-ChatsOverviewPage__chat">
                        <a class="tl-ChatsOverviewPage__link-container" href="/chat/<%= openChat.id %>">
                            <img src="<%= openChat.profileImageUrl %>" alt="<%= openChat.fullName %>" class="tl-ChatsOverviewPage__profile-image">
                            <h2 class="tl-ChatsOverviewPage__profile-name"><%= openChat.fullName %></h2>
                            <p class="tl-ChatsOverviewPage__last-message tl-ChatsOverviewPage__last-message--by-<%= openChat.lastMessage.byWho %>">
                                <%= openChat.lastMessage.content %>
                            </p>
                        </a>
                        <form action="/delete_chat/<%= openChat._id %>" method="POST">
                            <button
                                type="submit"
                                class="tl-ChatsOverviewPage__delete-chat"
                            ></button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </main>
        <script src="/index.js"></script>
    </body>
</html>